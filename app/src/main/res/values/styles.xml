<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomSheetItemTextNormal" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7E7E7E</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetItemTextSelected" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Common.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#3E3950</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">#3E3950</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="endIconMode">custom</item>
        <item name="startIconTint">#3E3950</item>
        <!--        <item name="endIconDrawable">@drawable/ic_launcher_foreground</item>-->
        <item name="errorIconDrawable">@null</item>
    </style>


    <style name="Common.TextInputLayoutEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#392388</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="hintTextColor">#9C27B0</item>
        <item name="boxStrokeColor">#9C27B0</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="endIconMode">none</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <!-- Card View Style -->
    <style name="Common.CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginStart" tools:ignore="NewApi">6dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">6dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="contentPadding">4dp</item>

        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>

    <style name="Common.PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint" tools:ignore="NewApi">#18EF99</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Common.NegativeButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint" tools:ignore="NewApi">#DC637F</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Common.NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint" tools:ignore="NewApi">#9C27B0</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>

        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Common.OutlinedMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:padding">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="textAllCaps">false</item>

        <item name="android:textColor">#9C27B0</item>
        <item name="rippleColor">#9C27B0</item>
        <item name="strokeColor">#9C27B0</item>
        <item name="strokeWidth">2dp</item>

    </style>

    <style name="Common.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="textAllCaps">false</item>

    </style>


    <!--    Size decreasing order-->
    <!--    -->
    <!--    Head -->
    <!--    SubHead-->
    <!--    Content-->
    <!--    -->

    <style name="TextStyleHeadMediumBold" >
        <item name="android:textColor">#252525</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleContentMediumBold" >
        <item name="android:textColor">#4C4C4C</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleContentMedium">
        <item name="android:textColor">#4C4C4C</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>