<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="BottomSheetItemTextNormal" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7E7E7E</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetItemTextSelected" parent="@android:style/Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Card View Style -->
    <style name="Common.CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin" >4dp</item>
        <item name="contentPadding">6dp</item>

        <item name="cardBackgroundColor">#FFFFFF</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="strokeColor">#AEAEAE</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/primaryColor</item>
    </style>

    <style name="Common.NormalButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/primaryColor</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>

        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">55dp</item>
    </style>

    <style name="Common.OutlinedMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">

        <item name="android:padding">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="textAllCaps">false</item>

        <item name="android:textColor">@color/primaryColor</item>
        <item name="rippleColor">@color/primaryColor</item>
        <item name="strokeColor">@color/primaryColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:minHeight">55dp</item>

    </style>


    <!--    Size decreasing order-->
    <!--    -->
    <!--    Head -->
    <!--    SubHead-->
    <!--    Content-->
    <!--    -->

    <style name="TextStyleHeadMediumBold" >
        <item name="android:textColor">#252525</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleContentMediumBold" >
        <item name="android:textColor">#4C4C4C</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleContentMedium">
        <item name="android:textColor">#4C4C4C</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
    </style>



</resources>